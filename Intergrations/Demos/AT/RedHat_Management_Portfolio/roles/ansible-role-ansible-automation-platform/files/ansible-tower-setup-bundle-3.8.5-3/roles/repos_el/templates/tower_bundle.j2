[ansible-tower]
name=Ansible Tower Offline Repository $releasever $basearch
baseurl=file://{{ bundle_install_folder }}/ansible-tower
enabled=0
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-redhat-release
cost=10

